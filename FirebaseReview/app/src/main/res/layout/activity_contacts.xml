<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiran.firebasereview.ContactsActivity">

    <Button
        android:id="@+id/button_CreateNew"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="Create New Contact" />

    <Button
        android:id="@+id/button_Logout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_CreateNew"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Logout" />

    <ListView
        android:id="@+id/contacts_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_CreateNew"
        android:layout_marginTop="29dp"
        android:layout_toStartOf="@+id/button_Logout" />
</RelativeLayout>
