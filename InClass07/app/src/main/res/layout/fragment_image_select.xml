<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageViewF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/avatar_f_1" />

    <ImageView
        android:id="@+id/imageViewF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/avatar_f_2" />

    <ImageView
        android:id="@+id/imageViewF3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewF1"
        android:layout_marginTop="14dp"
        android:src="@drawable/avatar_f_3" />

    <ImageView
        android:id="@+id/imageViewM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageViewF3"
        android:src="@drawable/avatar_m_1" />

    <ImageView
        android:id="@+id/imageViewM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewF3"
        android:layout_marginTop="14dp"
        android:src="@drawable/avatar_m_2" />

    <ImageView
        android:id="@+id/imageViewM3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageViewM1"
        android:layout_alignTop="@+id/imageViewM2"
        android:src="@drawable/avatar_m_3" />
</RelativeLayout>
